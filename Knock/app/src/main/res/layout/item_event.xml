<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boder_item_recycler"
    android:orientation="vertical"
    android:elevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_titlePU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:text="PICK-UP POINT" />

        <TextView
            android:id="@+id/tv_detailPU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_titlePU"
            android:paddingLeft="10dp"
            android:text="London City Airport, UK"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_line01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rel_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_titleDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:text="DESTINATION" />

        <TextView
            android:id="@+id/tv_detailDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_titleDestination"
            android:paddingLeft="10dp"
            android:text="Charles de Gaulle Airport, Paris,France"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_line02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/linearTimeItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_titleTimeDepart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:text="DEPARTURE TIME" />

            <TextView
                android:id="@+id/tv_timeDepart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_titleTimeDepart"
                android:paddingLeft="10dp"
                android:text="14:00pm GMT"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_titleTimeArrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:text="ARRIVAL TIME" />

            <TextView
                android:id="@+id/tv_timeArrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_titleTimeArrival"
                android:paddingLeft="10dp"
                android:text="16:00pm GMT"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>