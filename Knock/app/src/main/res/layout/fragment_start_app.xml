<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.example.hongdo.knock.activitys.MainActivity">

    <RelativeLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/btn_show_dialog"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@color/colorBackground"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_menu_black_24dp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_login_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="You already have a login?"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btn_creat_account"
        android:layout_width="@dimen/dimen_width_button270"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/boder_button_white"
        android:layout_above="@+id/tv_login_app"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:text="CREATE ACCOUNT"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:drawableRight="@drawable/ic_arrow_forward_black_24dp"/>
    <TextView
        android:id="@+id/tv_100Screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="18sp"
        android:text="100+ Screens" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/tv_100Screen"
        android:text="Knock UI Kit"
        android:textSize="40sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:gravity="center"/>



</RelativeLayout>